<h1>Recipes!</h1>

<h2>Recipes to Try!</h2>

<ul>
  {{#each recipes}}
    {{#unless tried}}
      {{> recipes/toTry-block tried=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Saved Recipes</h2>

<ul>
  {{#each recipes}}
    {{#if tried}}
      {{> recipes/tried-block tried=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Recipe</h2>
<form class="create-form">

  <div class="form-group">
    <label for="rn">Recipe Name:</label>
    <input type="text" id="rn" name="recipeName">
    <label for="ru">Recipe URL:</label>
    <input type="text" id="ru" name="recipeUrl">
  </div>
  <button type="submit">Add Recipe</button>
</form>

